<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccueilFragment">

    <LinearLayout
        android:id="@+id/accueil_linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Top 10"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <GridLayout
            android:id="@+id/top_dix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_row="0"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_row="1"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton2"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_row="0"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton3"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_row="0"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton7"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_row="2"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_row="1"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton6"
                android:layout_row="1"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton8"
                android:layout_row="2"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton10"
                android:layout_row="3"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton9"
                android:layout_row="2"
                android:layout_column="2" />
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/barre2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Suggestions"
            android:id="@+id/textSuggestion"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <GridLayout
            android:id="@+id/liste_des_suggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton31"
                android:layout_row="1"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton32"
                android:layout_row="1"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton33"
                android:layout_row="1"
                android:layout_column="3" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton34"
                android:layout_row="2"
                android:layout_column="1" />
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/barre3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Liste de lecture"
            android:id="@+id/textListeLecture"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/infoListe"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:id="@+id/liste_de_lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton21"
                android:layout_row="1"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton22"
                android:layout_row="1"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton23"
                android:layout_row="1"
                android:layout_column="3" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton24"
                android:layout_row="2"
                android:layout_column="1" />
        </GridLayout>

    </LinearLayout>


</ScrollView>
