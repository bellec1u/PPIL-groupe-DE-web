<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppil.groupede.callmeishmael.fragment.DetailsLivreFragment"
    android:fillViewport="false">


    <?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.ppil.groupede.callmeichmael.DetailsLivreActivity"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Auteur :"
            android:id="@+id/author"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/title"
            android:layout_alignStart="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Titre :"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/rep_page_number"
            android:layout_marginStart="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cover_image"
            android:paddingLeft="50px"
            android:paddingTop="50px"
            android:paddingRight="50px"
            android:paddingBottom="50px"
            android:padding="150px"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Catégorie :"
            android:id="@+id/genre"
            android:layout_below="@+id/cover_image"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Résumé :"
            android:id="@+id/resume"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/page_number"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date de parution :"
            android:id="@+id/publication_date"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/genre"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Note moyenne :"
            android:id="@+id/stars_average"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/publication_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre de pages :"
            android:id="@+id/page_number"
            android:layout_below="@+id/stars_average"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Langue :"
            android:id="@+id/language"
            android:layout_below="@+id/rep_resume"
            android:layout_alignParentStart="false"
            android:layout_marginTop="55dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/rep_parution_date"
            android:text="19/12/1999"
            android:layout_below="@+id/rep_genre"
            android:layout_alignStart="@+id/rep_page_number" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/rep_resume"
            android:layout_below="@+id/resume"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="résumérésumérésumérésumé"
            android:layout_alignEnd="@+id/rep_page_number" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/rep_page_number"
            android:text="9999"
            android:layout_marginLeft="15dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/page_number"
            android:layout_toRightOf="@+id/page_number"
            android:layout_alignBottom="@+id/page_number" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rep_genre"
            android:text="categ"
            android:layout_below="@+id/cover_image"
            android:layout_alignEnd="@+id/publication_date" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rep_author"
            android:layout_below="@+id/author"
            android:layout_alignStart="@+id/author"
            android:text="auteur1, auteur2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rep_title"
            android:layout_below="@+id/title"
            android:layout_alignStart="@+id/title"
            android:text="titre" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rep_language"
            android:text="langue"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/language"
            android:layout_toEndOf="@+id/language"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-7dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:id="@+id/bt_retour"
            android:layout_alignTop="@+id/rep_language"
            android:layout_toEndOf="@+id/title" />

    </RelativeLayout>



</ScrollView>
